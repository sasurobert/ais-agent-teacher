generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["teacher"]
}

model TeacherState {
  teacherDid  String   @id @map("teacher_did")
  lastLogin   DateTime @default(now()) @map("last_login")
  preferences Json?

  @@schema("teacher")
  @@map("teacher_state")
}

model ClassAnalytics {
  id          String   @id @default(uuid())
  teacherDid  String   @map("teacher_did")
  className   String   @map("class_name")
  summary     String
  alertCount  Int      @default(0) @map("alert_count")
  createdAt   DateTime @default(now()) @map("created_at")

  @@schema("teacher")
  @@map("class_analytics")
}

model StudentAlert {
  id          String   @id @default(uuid())
  studentDid  String   @map("student_did")
  teacherDid  String   @map("teacher_did")
  type        String   // 'HELP_ABUSE', 'STRUGGLE', 'MILESTONE'
  severity    String   // 'LOW', 'MEDIUM', 'HIGH'
  message     String
  resolved    Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  @@schema("teacher")
  @@map("student_alert")
}
